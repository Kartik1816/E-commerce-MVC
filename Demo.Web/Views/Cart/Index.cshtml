@model Demo.Web.Models.CartViewModel
<div class="h-100 w-100 d-flex flex-column align-items-center justify-content-center">
        <div class="card w-50 h-75">
           @if(Model.CartProductViewModels != null && Model.CartProductViewModels.Count >0)
           {
            <div class="d-flex flex-column w-100 p-5">
                <div class="d-flex gap-2 p-2  w-100">
                    <div class="w-25">
                        <h5 class="fw-bold">Name</h5>
                    </div>
                    <div class="w-75 d-flex justify-content-between align-items-start">
                        <p class="fw-bold">Quantity</p>
                        <p class="fw-bold">Price</p>
                        <p class="fw-bold"></p>
                   </div>
                </div>
                <div  id="cartProductView">
                   <partial name="_CartProductList" model="@Model">
                </div>
            </div>
           }
           else
           {
            <div class="d-flex align-items-center justify-content-center h-100">
                <h4>Cart is empty</h4>
            </div>
           }
        </div>
        <div class="d-flex align-items-start my-2">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary mb-3">Cancel</a>
        </div>
</div>
<script src="~/js/product.js"></script>


