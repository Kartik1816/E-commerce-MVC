@model Demo.Web.Models.AuthViewModel
@{
    Layout=null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
     <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"></script>
</head>
<body>
<div class="row body-background position-absolute h-100 backgroundImage w-100 justify-content-center">
    <div class="col-sm-12 col-md-10 d-flex flex-column align-items-center justify-content-center">
        
            <h1 class="text-center text-white mb-5">Computers, Laptops And Accessories</h1>
           
        <div class="card dashboard-card-size shadow login-card-size h-50 d-flex flex-row align-items-center justify-content-center w-75">
            <div class="d-none d-md-block col-md-6 col-sm-12 align-items-center justify-content-center">
                <img class="ps-5 w-75 h-75 object-fit-cover" src="~/images/cla.png" alt="">
            </div>
            <div class="w-100 h-100 d-flex flex-column align-items-center justify-content-center">
                <div class="d-flex align-items-center justify-content-start pb-5">
                    <h4>Welcome To CLA</h4>
                </div>
                <div class="d-flex align-items-center justify-content-center flex-column w-100">
                <form class="form-container d-flex flex-column gap-3 w-75"  id="login-form" >
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="d-flex flex-column">
                            <div class="input-group" class="py-2 d-flex flex-column">
                            
                                <input type="email" class="form-control" placeholder="Email*" id="email" asp-for="@Model.Email" name="Email">
                                <img src="~/images/person.svg" alt="" class="tiny-svg">
                            </div>
                                <span asp-validation-for="@Model.Email" class="text-danger"></span>
                            <p id="email-error" class="text-danger"></p>
                        </div>
                        <div>
                        <div class="input-group">
                            <input type="password" class="form-control input::-ms-reveal"  placeholder="Password*"
                                id="password" asp-for="@Model.Password" name="Password">
                            <img src="~/images/show-password.svg" onclick="showPassword()" class="tiny-svg "
                                id="showpassword" />
                            <img src="~/images/hide-password.svg" onclick="showPassword()" class="tiny-svg d-none"
                                id="hidepassword" />
                            <span asp-validation-for="@Model.Password" class="text-danger"></span>

                        </div>
                            <p id="password-error" class="text-danger"></p>
                        </div>

                        <div class="d-flex justify-content-end">
                            <a asp-controller="ForgotPassword" asp-action="Index" class="text-decoration-none">Forgot Password?</a>
                        </div>
                    
                        <button type="submit" class="btn btn-primary">Login</button>
                        <div class="d-flex justify-content-center">
                            <a asp-controller="Auth" asp-action="Registration" class="py-3 text-decoration-none">Don't have an account? Register here</a>
                        </div>
                    </form>
                    <p id="login-error"  class="text-danger"></p>
                </div>
            </div>  
        </div>
    </div>
</div>


@section Scripts {
  @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
  }
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/login.js" asp-append-version="true"></script>

    </body>
</html>

