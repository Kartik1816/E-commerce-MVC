<div class="d-flex align-items-center justify-content-center h-100 w-100">
    <div class="card d-flex flex-column align-items-center justify-content-center w-75 h-75 cursor-pointer px-3">
        <div class="d-flex gap-4 align-items-center justify-content-between w-100">
            <div class="w-50 h-50 d-flex">
                <img src="@productImage" alt="Product Image" class="img-fluid w-75 h-100 mb-4" style="object-fit: fill;"        >
            </div>
            <div class="card-body d-flex flex-column  p-2">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.Description</p>
                <p class="card-text"><strong>Price:</strong> â‚¹@Model.Price.ToString("F2")</p>
                @if (Model.Discount > 0)
                {
                    <p class="card-text text-success"><strong>Discount:</strong> @Model.Discount.ToString("F2")%</p>
                }
                <div style="margin-top: 10px;">
                    <a href="/Cart/Add/@Model.Id" class="btn btn-success">Add to Cart</a>
                    <a href="/Wishlist/Add/@Model.Id" class="btn btn-secondary" style="margin-left: 10px;">Add to Wishlist</a>
                </div>
            </div>
        </div>
    </div>
</div>