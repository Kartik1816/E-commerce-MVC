@model Demo.Web.Models.CLAViewModel

<div class="row h-100 w-100">
    <div class="d-flex justify-content-end">
        <button class="btn btn-primary text-nowrap" style="height: 50px;width: 150px;" data-bs-toggle="modal" data-bs-target="#addEditProduct"  onclick="SaveProduct()">Add Product+</button>
    </div>
    <div class="d-flex align-items-center justify-content-start gap-4 h-25">
    @if(Model != null && Model.Products != null && Model.Products.Count > 0)
    {
        foreach (ProductViewModel product in Model.Products)
        {
                string productImage = string.IsNullOrEmpty(product.ImageUrl)
                    ? "/images/Default_pfp.svg.png"
                    : $"/images/product-images/{product.ImageUrl}";
            
            <div class="card d-flex flex-column align-items-center justify-content-center col-3 h-100 cursor-pointer p-3">
                <div class="d-flex gap-4 align-items-center">
                    <img src="@productImage" alt="Product Image" class="img-fluid mb-4 w-50 h-100">
                    <div class="d-flex flex-column justify-content-center h-100">
                        <div class="d-flex align-items-center justify-content-center h-50">
                            <h6>@product.Name</h6>
                        </div>
                        @* <div class="d-flex justify-content-between align-items-center h-50">
                            <button class="btn btn-sm">Add</button>
                            <button class="btn btn-sm">Add</button>
                        </div> *@
                    </div>
                </div>
            </div>
        }
    }
    </div>
    else
    {
        <p class="text-center">No products available.</p>
    }
</div>

<div id="addEditProductView">
    <partial name="_AddEditProduct" model="Model">
</div>
@section Scripts {
  @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
  }
}
<script src="~/js/cla.js"></script>